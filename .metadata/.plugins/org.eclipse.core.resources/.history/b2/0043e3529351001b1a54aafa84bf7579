package com.bookapp.controller;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class HelloController {

	@RequestMapping("home")
	public String hello() {
		return "hello world spring sec";
	}

	@RequestMapping("admin")
	public String admin() {
		return "hello world spring sec-admin profile";
	}

	@RequestMapping("mgr")
	public String mgr() {
		return "hello world spring sec mgr profile";
	}

	@RequestMapping("clerk")
	public String clerk() {
		return "hello world spring sec clerk profile";
	}

}
